{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/seqeralabs/nf-raffle/master/nextflow_schema.json",
    "title": "Seqera Labs Raffle Pipeline Parameters",
    "description": "Pipeline for managing raffle entries at various events",
    "type": "object",
    "$defs": {
        "input_output_options": {
            "title": "Input/output options",
            "type": "object",
            "properties": {
                "email": {
                    "type": "string",
                    "description": "Email address for raffle entry",
                    "format": "email",
                    "help_text": "Required for all events"
                },
                "name": {
                    "type": "string",
                    "description": "Full name (required for ISMB/BOSC 2024)"
                },
                "institute": {
                    "type": "string",
                    "description": "Institution name (required for ISMB/BOSC 2024)"
                }
            }
        },
        "event_options": {
            "title": "Event options",
            "type": "object",
            "properties": {
                "event": {
                    "type": "string",
                    "description": "Event name for raffle entry",
                    "enum": ["ismb_bosc2024", "biotechx_basel_2024", "ashg_2024"],
                    "help_text": "Specify which event you are participating in"
                }
            }
        }
    },
    "allOf": [
        {
            "$ref": "#/$defs/input_output_options"
        },
        {
            "$ref": "#/$defs/event_options"
        }
    ]
}
